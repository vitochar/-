#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
int main()
{
	//float p = 3.14,r=1.5,h=3;
	double p=3.14, r, h;  //r半径  h高 p圆周率
	printf("请输入圆柱体半径：");
	scanf("%lf", &r);
	printf("请输入圆柱体高：");
	scanf("%lf", &h);
	printf("圆柱体周长为：%.2lf\n",2 * r * p); //C=2πr 或 C=πd
	printf("圆柱体面积为：%.2lf\n", p * r * r); //S=πr²=πd²/4
	printf("圆球表面积为：%.2lf\n", 4*p * r * r);    //球体表面积计算公式为：S=4πR²
	printf("圆球体积为：%.2lf\n", (4/3) * p * r * r * r);  //球体体积计算公式为：V=(4/3)πR³
	printf("圆柱体积为：%.2lf\n", p * r * r * h);    //圆柱体积=πr²h=S底面积×高（h）
	    //请输入圆柱体半径：1.5
		//请输入圆柱体高：3
		//圆柱体周长为：9.42
		//圆柱体面积为：7.06
		//圆球表面积为：28.26
		//圆球体积为：10.60  这里教科书是3/4*p*r*r*r 所以得到的值不一样
		//圆柱体积为：21.20

	return 0;
}
