#include <stdio.h>
#include <math.h>
int main()
{
	float r0,r1,r2,r3,r4,r5,p,p1,p2,p3,p4,p5;//年利率r 存款年数n
	p= 1000 ;  
	r5 = 0.03;
	r3 = 0.0275;
	r2 = 0.021;
	r1 = 0.015;
	r0 = 0.0035;
	//公式 1年期本息和：p=1000*（1+r）；
	//    n年期本息和：p=1000*（1+n*r）；
	// 存n次1年期的本息和：p=1000*（1+r）^n;
	// 活期存款本息和：p=1000*（1+r/4）^4*n;
	// 1000*（1+r/4）是一个季度的本息和；

	p1 = p * (1 + r5 * 5);
	printf("（1）1000元存5年期：%.2lf\n",p1);
	p2 = p * (1 + 2 * r2) * (1 + 3 * r3);
	printf("（2）1000元存2年期,到期后再将本息再存3年：%.2lf\n", p2);
	p3 = p * (1 + 3 * r3)*(1 + 2 * r2) ;
	printf("（3）1000元存3年期,到期后再将本息再存2年：%.2lf\n", p3);
	p4 = p * pow(1 + r1, 5);
	printf("（4）1000元存1年期,到期后再将本息再存1年,连续5年：%.2lf\n", p4);
	p5 = p*pow(1+r0/4,20);  
	printf("（5）货期存款,一个季度结算一次，连续5年：%.2lf\n",p5 );

	return 0;
}
